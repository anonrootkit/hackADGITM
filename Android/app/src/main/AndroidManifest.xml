            android:label="@string/title_activity_home_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Web_Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomeActivityDoc"
            android:label="@string/title_activity_home_doc"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PersonalDeatilsUser" />
        <activity android:name=".PersonalDetailsDoc" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>