<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"
    android:padding="16dp"
    android:background="#ffffff"
    >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/doc_uname"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:hint="Username"
        android:background="@drawable/shape_rect"
        android:padding="16dp"
        />

    <ImageView
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/icon"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_uname"
        android:id="@+id/doc_pwd"
        android:layout_marginTop="8dp"
        android:hint="Password"
        android:background="@drawable/shape_rect"
        android:padding="16dp"
        android:inputType="textPassword"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_pwd"
        android:layout_marginTop="16dp"
        android:text="Proceed"
        android:id="@+id/doc_proceed"
        android:background="#26A69A"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue as Doctor"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="32sp"
        android:layout_above="@id/doc_uname"
        android:layout_below="@id/icon"
        android:textColor="#26A69A"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue as user"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:id="@+id/doc_change"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_below="@id/doc_proceed"
        />
</RelativeLayout>